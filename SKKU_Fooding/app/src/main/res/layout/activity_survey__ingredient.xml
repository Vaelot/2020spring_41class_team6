<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".activities.SurveyActivity_Ingredient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGREDIENT"
            android:textAlignment="center"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/radio_group"
            android:text="Choose your favorite ingredient."
            android:textAlignment="center"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/ingredient_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/ingredient_pork"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="Pork"
                android:textSize="25dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/ingredient_beef"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="Beef"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/ingredient_chicken"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="Chicken"
                android:textSize="25dp"/>

            <RadioButton
                android:id="@+id/ingredient_seafood"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="Seafood"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/ingredient_flour"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="Flour"
                android:textSize="25dp" />
        </RadioGroup>

        <Button
            android:id="@+id/ingredient_next_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="NEXT"
            android:textSize="15dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>