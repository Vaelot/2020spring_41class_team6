<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".activities.SurveyActivity_Salty">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALTY"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/radio_group"
            android:text="Choose the level of the taste."
            android:textAlignment="center"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/salty_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/salty_level1_btn"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="LEVEL 1"
                android:textSize="25dp"/>

            <RadioButton
                android:id="@+id/salty_level2_btn"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="LEVEL 2"
                android:textSize="25dp"/>

            <RadioButton
                android:id="@+id/salty_level3_btn"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_selector"
                android:buttonTint="@color/sub_yellow"
                android:gravity="center"
                android:text="LEVEL 3"
                android:textSize="25dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/salty_next_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="NEXT"
            android:textSize="15dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>